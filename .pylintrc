; This .pylintrc files is for the pre-commit check. It is  the same
; as the main CI config with the exception of pylint_django, which
; can prove hard to configure if you are using pipenv / virtualenv
; and pre-commit is running outside of your virtualenv.

[MASTER]
init-hook="from pylint.config import find_pylintrc; import os, sys; sys.path.append(os.path.dirname(find_pylintrc()));"
ignore=CVS,.git,.tox,.cache,.venv,frontend

[MESSAGES CONTROL]
disable=all
enable=bare-except,broad-except,unused-import,assert-false,assert-outside-tests,direct-logging,import-silk,import-pdb,print-function

[REPORTS]
output-format=text
reports=no
score=no
